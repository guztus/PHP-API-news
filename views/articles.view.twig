<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

{% include 'navBar.view.twig' %}

{% if articles is empty %}
    <a>Nothing was found!</a>
{% else %}
    {% set displayedArticleCount = 45 %}

    <a style="display: flex; justify-content: right; padding-right: 5px; font-size: 10px">(*Showing a maximum
        of {{ displayedArticleCount }} articles)</a>
    <div class="container-fluid" style="text-align: center; width: 95%">

        <div class="row justify-content-md-center">
        {% for article in articles.articles|slice(1, displayedArticleCount) %}
                <div class="col-4 bg-light p-3 m-1" style="display:flex; border-radius: 15px">
                    <div class="col-9">
                        <a href="{{ article.url }}" target="_blank" style="text-decoration: none; color: chocolate"
                        > {{ article.title }}</a>
                    </div>
                    <div class="col">
                        <img src="{{ article.picture }}"
                             style="width: 120px; border-radius: 15px"
                             alt="article-image">
                    </div>
                </div>
        {% endfor %}
        </div>

    </div>
{% endif %}
</body>
</html>