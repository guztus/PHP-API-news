<body>

<p>Start typing a name in the input field below:</p>
<p>Suggestions: <span id="txtHint"></span></p>

<form method="POST">
    First name: <input type="text" name="name" id="inputField">
</form>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">My Profile</p>

                                <div class="d-flex flex-column">
                                    <div class="d-flex m-2" style="justify-content: center">
                                        <a style="font-size: 1.2em; font-weight: bold">Name: {{ user.name }}</a>
                                    </div>
                                    {% if user.email != 'guest' %}
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">

                                                <form method="POST">
                                                    <div class="d-flex">
                                                        <input type="text" id="name" class="form-control"
                                                               name="name"
                                                               required/>
                                                        <button class="btn"
                                                                >save
                                                        </button>
                                                    </div>
                                                    <div class="d-flex">
                                                        <label class="form-label" for="name">Change
                                                            Name</label>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>

                                        <div class="d-flex m-2" style="justify-content: center">
                                            <a style="font-size: 1.2em; font-weight: bold">Email: {{ user.email }}</a>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">

                                                <form method="POST">
                                                    <div class="d-flex">
                                                        <input type="email" id="email" class="form-control"
                                                               name="email"
                                                               required/>
                                                        <button class="btn"
                                                                >save
                                                        </button>
                                                    </div>
                                                    <div class="d-flex">
                                                        <label class="form-label" for="email">Change
                                                            Email</label>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>

                                        <div class="d-flex m-2" style="justify-content: center">
                                            <a style="font-size: 1.2em; font-weight: bold">Change password</a>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">

                                                <form method="POST">
                                                    <div class="d-flex">
                                                        <input type="password" id="password" class="form-control"
                                                               name="password"
                                                               required/>
                                                        <button class="btn"
                                                                >save
                                                        </button>
                                                    </div>
                                                    <div class="d-flex">
                                                        <label class="form-label" for="password">Change
                                                            Password</label>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    {% endif %}
                                </div>


                                <div class="d-flex justify-content-center">
                                    <a href="/">
